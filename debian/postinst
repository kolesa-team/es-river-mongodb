#!/bin/sh
set -e

case "$1" in
  configure)
    # For systemd, enable the nginx unit, but don't start it (just like the
    # init script).
    if [ -x /bin/systemctl ]; then
      systemctl enable river.service >/dev/null 2>&1 || true
    fi
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# Automatically added by dh_installinit
if [ -x "/etc/init.d/river" ] || [ -e "/etc/river/config.cfg" ]; then
        if [ ! -e "/etc/init/river.conf" ]; then
                update-rc.d river defaults 16 80 >/dev/null
        fi
        invoke-rc.d river start || exit $?
fi
# End automatically added section


exit 0
